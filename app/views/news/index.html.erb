<div class="container-fluid new">
  <div id="fluid-blank"></div>
</div>

<div class="container container-1">
  <div class="row-fluid">
    <div class="span4">
      <h4>联系我们</h4>
      <hr>
      <p>联 系 人: <%= @company.contact %></p>
      <p>联系电话: <%= @company.tel %></p>
      <p>公司传真: <%= @company.fax %></p>
      <p>即时通讯: <%= @company.qq %>(QQ)</p>
      <p>公司地址: <%= @company.address%></p>
    </div>
    <div class="span8">
      <h4>新闻中心</h4>
      <table class="table">
        <% @news.each do |new| %>
          <tr>
           <td><%= link_to new.title, new %></td>
           <td><%= format_date new.updated_at %></td>
          </tr>
        <% end %>
      </table>
      <%= paginate @news %>
    </div>
  </div>
</div>
